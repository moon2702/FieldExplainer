{
    "app": {
        "name": "FieldExplainer",
        "version": "1.0.0",
        "author": "FieldExplainer Team"
    },
    "clipboard": {
        "monitor_interval": 500,
        "debounce_delay": 300,
        "max_content_length": 1000
    },
    "floating_icon": {
        "size": 32,
        "opacity": 0.8,
        "auto_hide_delay": 3000,
        "follow_cursor": true
    },
    "analysis": {
        "timeout": 5000,
        "cache_size": 100,
        "enable_history": true
    },
    "ui": {
        "theme": "default",
        "font_size": 12,
        "language": "zh_CN"
    }
}
